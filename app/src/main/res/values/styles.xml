<resources>

    <!-- Base application theme. -->
    <style name="MaterialTheme" parent="MaterialTheme.Base" />

    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/LightBlue_500</item>
        <item name="colorPrimaryDark">@color/LightBlue_700</item>
        <item name="colorAccent">@color/IndigoAccent_200</item>
        <item name="android:textColorPrimary">@color/Black_opacity_87</item>
        <item name="android:textColorSecondary">@color/Black_opacity_54</item>
        <item name="android:textColorHint">@color/Black_opacity_38</item>
        <item name="android:divider">@color/Black_opacity_12</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="KeypadLayoutStyle" parent="MaterialTheme.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/colorKeypadButtonText</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_margin">@dimen/keypad_button_margins</item>
        <item name="android:textSize">@dimen/keypad_button_text_size</item>
    </style>

    <style name="TimerButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/timer_button_text_size</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DigitalTimerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/timer_view_text_size</item>
        <item name="android:textColor">@color/Black_opacity_87</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ListItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/Black_opacity_87</item>
    </style>

    <style name="ListItemImageButton" parent="MaterialTheme.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/colorKeypadButtonText</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TimerDigitsSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/text_view_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_view_size</item>
        <item name="android:color">@color/Black_opacity_38</item>
        <item name="android:text">@string/default_time</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:focusable">false</item>
    </style>


</resources>
