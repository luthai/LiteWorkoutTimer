<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/numeric_keypad"
        layout="@layout/keypad"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/timer_buttons_padding_top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_rest"
            android:layout_margin="@dimen/timer_buttons_layout_margin"
            android:background="@color/LightBlue_500"
            android:text="@string/rest_button"
            android:textColor="@color/White"
            android:textSize="@dimen/timer_button_text_size"
            style="@style/KeypadLayoutStyle"/>

        <Button
            android:id="@+id/button_start"
            android:layout_margin="@dimen/timer_buttons_layout_margin"
            android:background="@color/Green_500"
            android:text="@string/start_button"
            android:textColor="@color/White"
            android:textSize="@dimen/timer_button_text_size"
            style="@style/KeypadLayoutStyle"/>

    </LinearLayout>

</LinearLayout>